<Window x:Class="AHDB.UI.Views.AddNoteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add new Note" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="1" LastChildFill="True">
            <Label Content="New Note" DockPanel.Dock="Top"/>
            <TextBox Text="{Binding Note.NoteText}" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </DockPanel>
        <StackPanel Grid.ColumnSpan="2"
                    Orientation="Vertical"
                    Grid.Row="3">
            <Button Content="Save Note" 
                    Height="40"
                    Command="{Binding CreateNewNote}"/>
            <Button Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
