<Window x:Class="AHDB.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File"/>
            <MenuItem Header="Repair">
                <MenuItem Header="Create new Repair" Command="{Binding CreateNewRepair}"/>
            </MenuItem>
            <MenuItem Header="Customer">
                <MenuItem Header="Create new Customer"/>
            </MenuItem>
        </Menu>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label Content="Repairs"/>
            <DataGrid ItemsSource="{Binding Repairs}" 
                      IsReadOnly="True" 
                      Margin="5"
                      SelectedItem="{Binding SelectedRepair}"
                      AutoGenerateColumns="False" FontSize="16">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="Auto" Header="Repair Id" Binding="{Binding RepairID}"/>
                    <DataGridTextColumn Width="*" Header="Purchase Order" Binding="{Binding PurchaseOrder}"/>
                    <DataGridTextColumn Width="*" Header="Quote Number" Binding="{Binding QuoteNumber}"/>
                    <DataGridCheckBoxColumn Width="*" Header="Completed" Binding="{Binding Completed}"/>
                    <DataGridTextColumn Width="*" Header="Created" Binding="{Binding DateCreated}"/>
                    <DataGridTextColumn Width="*" Header="Due Date" Binding="{Binding DueDate}"/>
                    <DataGridTextColumn Width="*" Header="Customer" Binding="{Binding Customer.CompanyName}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>