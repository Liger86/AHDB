<Window x:Class="AHDB.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File"/>
            <MenuItem Header="Repair">
                <MenuItem Header="Create new Repair" Command="{Binding CreateNewRepair}"/>
            </MenuItem>
            <MenuItem Header="Customer">
                <MenuItem Header="Create new Customer" Command="{Binding CreateNewCustomer}"/>
            </MenuItem>
            <MenuItem Header="Vendor">
                <MenuItem Header="Create new Vendor" Command="{Binding CreateNewVendor}"/>
            </MenuItem>
        </Menu>
        <DockPanel Grid.Row="1">
            <Label Content="Repairs" DockPanel.Dock="Top"/>
            <DataGrid ItemsSource="{Binding Repairs}" DockPanel.Dock="Top"
                      IsReadOnly="True" 
                      Margin="5"
                      SelectedItem="{Binding SelectedRepair}"
                      AutoGenerateColumns="False"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="True"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="Auto" Header="Repair Id" Binding="{Binding RepairID}"/>
                    <DataGridTextColumn Width="Auto" Header="Purchase Order" Binding="{Binding PurchaseOrder}"/>
                    <DataGridTextColumn Width="Auto" Header="Quote Number" Binding="{Binding QuoteNumber}"/>
                    <DataGridCheckBoxColumn Width="Auto" Header="Completed" Binding="{Binding Completed}"/>
                    <DataGridTextColumn Width="Auto" Header="Created" Binding="{Binding DateCreated}"/>
                    <DataGridTextColumn Width="Auto" Header="Due Date" Binding="{Binding DueDate}"/>
                    <DataGridTextColumn Width="*" Header="Customer" Binding="{Binding Customer.CompanyName}"/>
                    <DataGridTemplateColumn Width="80" Header="Edit">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>